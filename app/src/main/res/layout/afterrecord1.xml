<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/back10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/soju" />

            <EditText
                android:id="@+id/count1"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:hint="0"
                android:gravity="center"
                android:textSize="25dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/white"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="잔"
                android:textStyle="bold"
                android:textSize="25dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="soju (60ml)"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/EditText_id2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/beer"
                android:background="@color/white"/>



            <EditText
                android:id="@+id/count2"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:hint="0"
                android:gravity="center"
                android:textSize="25dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/white"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="잔"
                android:textStyle="bold"
                android:textSize="25dp"/>



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="beer (200ml)"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginHorizontal="15dp">

            <ImageView
                android:id="@+id/EditText_id3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/wine"
                android:background="@color/white"/>


            <EditText
                android:id="@+id/count3"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:hint="0"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="25dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="잔"
                android:textStyle="bold"
                android:textSize="25dp"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="wine (150ml)"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/EditText_id4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/whiskey"
                android:background="@color/white"/>



            <EditText
                android:id="@+id/count4"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:hint="0"
                android:gravity="center"
                android:textSize="25dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/white"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="잔"
                android:textStyle="bold"
                android:textSize="25dp"/>



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="whiskey (45ml)"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <ImageButton
            android:id="@+id/record"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/choice5"
            android:clickable="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>