<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recomendActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back2"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/randomimage"
                android:layout_width="300dp"
                android:layout_height="260dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/mar" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/recomendpanda" />

            <TextView
                android:id="@+id/recomend"
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:layout_marginTop="330dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

        </RelativeLayout>



        <ImageButton
            android:id="@+id/randomchoice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/choice10" />

        <ImageButton
            android:id="@+id/okay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/choice11" />
        <Button
            android:clickable="true"
            android:id="@+id/btnopen"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/choice11"
            android:backgroundTint="@color/purple_200"
            android:text="메뉴 종류 보기"
            android:textStyle="bold"
            android:textSize="20dp"/>


    </LinearLayout>
    <include layout='@layout/custom2'/>

</androidx.drawerlayout.widget.DrawerLayout>